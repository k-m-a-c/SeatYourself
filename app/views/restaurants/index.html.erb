<h1>All ze restaurants!</h1>

<% if current_user %>
  <%= link_to "Create Restaurant", new_restaurant_path %>
<% else %>
  <p><%= "Know a cool restaurant? Sign up to share it with the world!" %> <%= link_to 'Sign Up', new_user_path %>
  </p>
<% end %>

<% if @restaurants.any? %>

  <ul>
    <% @restaurants.each do |r| %>
      <li><%= link_to r.name, restaurant_path(r) %></li>
    <% end %>
  </ul>

<% end %>

