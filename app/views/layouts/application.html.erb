<!DOCTYPE html>
<html>
<head>
  <title>SeatYourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <p>
    Logged in as <%= current_user.name %>.
    <%= link_to 'Log out', session_path(:current), method: :delete %> |
    <%= link_to 'Make a Reservation', restaurants_path %> |
    <%= link_to 'My Reservations', user_path(current_user) %>
  </p>
<% else %>
  <p>
    <%= link_to 'Create an account', new_user_path %>
    <%= link_to 'Log in', new_session_path  %>
  </p>
<% end %>

<%= yield %>

</body>
</html>
